<h1>Episode</h1>

<h3><%= "Date: #{@episode.date}" %></h3>


<h3>Guests</h3>

<ul>
  <% @episode.guests.each do |guest| %>
    <li><%= link_to guest.name, guest %></li>
  <% end %>
</ul>
<% @episode.appearances.each do |num| %>
  <% if num.episode_id == @episode.id %>
    <%= "RATING: #{num.rating} "%>
    <% end %>

  <br />
  <br />

  <br />
<%= link_to "Edit Appearance", edit_appearance_path %>
<% end %>
